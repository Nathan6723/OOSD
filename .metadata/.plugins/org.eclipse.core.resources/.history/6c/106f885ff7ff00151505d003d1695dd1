		// TODO Auto-generated method stub
		return false;
	}





	@Override
	public void useSpecialPower(Unit u) {
		// TODO Auto-generated method stub
	    
		this.shieldflag=true;
	}





	@Override
	public boolean move(int steps) {
		// TODO Auto-generated method stub
		return false;
	}






	
}
